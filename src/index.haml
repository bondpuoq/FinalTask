!!! 5
%html
  %head
    %meta{ charset: "utf8" }
    %link{ rel: "stylesheet", href: "css/style.css" }
  %body
    %div.offer-list
      %script#js-offer-list{type: "text/x-handlebars-template"}
        {{#each this}}
          %div.offer
            %div.offer-image
              %img{ src: "{{offerImg}}" }
            %div.offer-caption
              {{caption}}
            %div.offer-info
              %div.category
                {{category}}
              %div.date
                {{dateBegin}}-{{dateEnd}}
              %div.location
                {{location}}
            %div.offer-feedback
              %div.likes
                {{likes.length}}
              %div.adds
                {{adds.length}}
              %div.comments
                {{comments.length}}
              %div.mentions
                {{mentions.length}}
            %div.offer-author
              %div.avatar
                %img{ src: "{{user.avatar}}" }
              %div.ticket
                %span.name {{user.fio}}
                %br/
                %span.label предлагает
            %div.offer-feedback-details
            {{#each comment}}
              %div{data-user-id:"{{author.id}}"}
              %div.avatar
                %img { src: "{{author.avatar}}"}
              %div.text
                {{text}}
            {{/each}}
        {{/each}}
    %script{src:"js/app.js"}
